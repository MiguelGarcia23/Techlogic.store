                        <ul>
                            <li>
                                <div class="option-navbar-with-icon" id="collections-products-option-slide-menu">
                                    <a href="/products/collections">Colecciones</a>
                                    <i class="fa-solid fa-plus"></i>
                                    <i class="fa-solid fa-minus icono-menos-slide-menu"></i>
