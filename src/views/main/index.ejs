<!DOCTYPE html>
<html lang="en">
    <!-- HEAD -->
    <%- include('../partials/head', {title: 'Techlogic.store', stylesheet: 'main/index.css'}) %>
    
    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>

        <!-- MAIN -->
        <main class="main" id="main-banner">
                    <!-- BANNER PRINCIPAL -->
            <section class="main-banner">
                <!-- CARRUSEL DEL BANNER PRINCIPAL -->
                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                    
                    <div class="carousel-item active">
                        <img src="/img/banners/1.png" class="d-block w-100 img-fluid" alt="Banner 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/banners/2.png" class="d-block w-100 img-fluid" alt="Banner 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/banners/3.png" class="d-block w-100 img-fluid" alt="Banner 3">
                    </div>
                    <div class="carousel-item">
                        <img src="/img/banners/4.png" class="d-block w-100 img-fluid" alt="Banner 4">
                    </div>
                    </div>
                    <!-- FLECHAS DEL CARRUSEL -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>

            <!-- SECCIÓN COLECCIONES -->
            <section class="main-banner" id="banner-collection">

                <div id="carouselExampleFade2" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        
                      <div class="carousel-item active">
                        <a href="/products/bestSellers">
                            <img src="/img/collections/1.png" class="d-block w-100 img-fluid" alt="Banner 1">
                        </a>
                      </div>
                      <div class="carousel-item">
                        <a href="/products/bestSellers">
                            <img src="/img/collections/2.png" class="d-block w-100 img-fluid" alt="Banner 2">
                        </a>
                      </div>
                      <div class="carousel-item">
                        <a href="/products/bestSellers">
                            <img src="/img/collections/3.png" class="d-block w-100 img-fluid" alt="Banner 3">
                        </a>
                      </div>
                      <div class="carousel-item">
                        <a href="/products/bestSellers">
                            <img src="/img/collections/4.png" class="d-block w-100 img-fluid" alt="Banner 4">
                        </a>
                      </div>
                      <div class="carousel-item">
                        <a href="/products/bestSellers">
                            <img src="/img/collections/5.png" class="d-block w-100 img-fluid" alt="Banner 4">
                        </a>
                      </div>
                    </div>
                    <!-- FLECHAS DEL CARRUSEL -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade2" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade2" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>

            </section>

            <!-- SECCIÓN INFO TECHLOGIC.STORE -->
            <section class="info-company-section">
                
                
                <!-- CUADRO DE INFO 1 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Contáctanos </h3>
                    <p class="p-info-company-section"> info@techlogic.com </p>
                    <p class="p-info-company-section"> 111-2345678 </p>
                </article>

                <!-- CUADRO DE INFO 2 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Visítanos </h3>
                    <p class="p-info-company-section"> Calle 123 </p>
                    <p class="p-info-company-section"> Ciudad Unknown </p>
                </article>

                <!-- CUADRO DE INFO 3 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Horario </h3>
                    <p class="p-info-company-section"> Lunes a Sábado </p>
                    <p class="p-info-company-section"> 8am - 5pm </p>
                </article>

            </section>

        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

