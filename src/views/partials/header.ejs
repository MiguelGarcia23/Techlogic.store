    <!-- BURGER MENÚ DE LA VERSIÓN MOBILE -->
    <div class="burger-menu">
        <i class="fas fa-bars"></i>
    </div>

    <!-- LOGO -->
    <div class="logo">
        <a href="/"><img src="/img/logo.svg" alt="Logo Techlogic.store"></a>
    </div>
    
    <!-- BARRA DE NAVEGACIÓN DE LA DERECHA -->
    <nav class="right-navbar">

        <ul>
            <!-- ÍCONO DE LUPA -->
            <li class="icono-right-navbar icono-search-right-navbar">
                <i class="fa-solid fa-magnifying-glass"></i>
            </li>

            <!-- ÍCONO DE USUARIO -->
            <li class="icono-right-navbar">
                <a href="/users/login" id="li-user-icon"><i class="fa-solid fa-user"></i></a>

                <% if (locals.isLogged) { %> 

                    <!-- MENÚ QUE SE DESPLIEGA DEL ÍCONO DEL USUARIO CUANDO YA SE INICIÓ SESIÓN -->
                    <div class="profile-menu-header profile-menu-full">
                        <div class="image-profile-menu">
                            <img src="/img/users/<%= locals.userLogged.image %> " alt="Foto de perfil del usuario">
                        </div>
                        <div class="info-profile-menu">
                            <p><%= locals.userLogged.name %></p>
                            <p><%= locals.userLogged.email %></p>
                        </div>
                        <div class="link-profile-menu">
                            <a href="/users/profile">Ver perfil...</a>
                        </div>
                    </div>

                <% } else { %> 
                    
                    <!-- MENÚ QUE SE DESPLIEGA DEL ÍCONO DEL USUARIO CUANDO AÚN NO SE HA INICIADO SESIÓN -->
                    <div class="profile-menu-header profile-menu-empty">
                        <a href="/users/login">Ir a Iniciar Sesión...</a>
                    </div>

                <% } %> 
                
            </li>

            <!-- ÍCONO DE CARRITO -->
            <li class="icono-right-navbar">
                <a href="/products/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
            </li>
        </ul>

    </nav>

