<!DOCTYPE html>
<html lang="en">
    <!-- HEAD -->
    <%- include('../partials/head', {title: 'Techlogic.store', stylesheet: 'main/index.css'}) %>
    
    <body>

        <!-- HEADER -->
        <%- include('../partials/header') %>
        

        <!-- BANNER PRINCIPAL -->
        <section class="main-banner">

            <!-- CARRUSEL DEL BANNER PRINCIPAL -->
            <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="true">

                <!-- INDICADORES DEL CARRUSEL -->
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>

                <!-- IMÁGENES DEL CARRUSEL -->
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="img/banner-1.png" class="d-block w-100" alt="Banner 1">
                  </div>
                  <div class="carousel-item">
                    <img src="img/banner-2.png" class="d-block w-100" alt="Banner 2">
                  </div>
                  <div class="carousel-item">
                    <img src="img/banner-3.png" class="d-block w-100" alt="Banner 3">
                  </div>
                  <div class="carousel-item">
                    <img src="img/banner-1.png" class="d-block w-100" alt="Banner 4">
                  </div>
                </div>

                <!-- FLECHAS DEL CARRUSEL -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
            </div>

        </section>

        <!-- MAIN -->
        <main class="main">

            <!-- SECCIÓN BEST SELLERS -->
            <section class="best-sellers-section">
                <!-- SUBTÍTULO SECCIÓN BEST SELLERS -->
                <p class="subtitle-best-sellers-section"> Explorá nuestros </p>
                <!-- TÍTULO SECCIÓN BEST SELLERS -->
                <h2 class="title-best-sellers-section"> Best Sellers </h2>

                <!-- PRODUCTOS DE LA SECCIÓN BEST SELLERS -->
                <div class="products-best-sellers">

                    <!-- RECORRO EL ARRAY DE BEST SELLERS PARA OBTENER CADA BEST SELLER -->
                    <% for (let bestSeller of bestSellers) { %>

                        <article class="product-best-seller">
                            <img src="/img/<%= bestSeller.img %>" alt="<%= bestSeller.name %>">
                            <h4 class="name-product-best-sellers-section"> <%= bestSeller.name %> </h4>
                            <p class="price-product-best-sellers-section"> <%= bestSeller.price %> </p>
                        </article>

                    <% } %>

                </div>

                <!-- ENLACE DE LA SECCIÓN BEST SELLERS -->
                <form action="/" method="POST">
                    <button class="button-seccion-best-sellers">Ver todos</button>
                </form>

            </section>

            <!-- SECCIÓN CONÓCENOS -->
            <section class="know-us-section">
                
                <!-- CUADRO DE INFORMACIÓN DENTRO DE LA SECCIÓN CONÓCENOS -->
                <div class="info-know-us-section">
                    <h3 class="title-know-us-section"> Conoce Techlogic.store</h3>
                    <p class="description-know-us-section"> Somos una empresa dirigida a la venta de dispositivos, artículos y accesorios electrónicos, 
                    merchandising y contenido tecnológico exclusivo.</p>
                    <form action="/" method="POST">
                        <button class="button-know-us-section"> Leer más </button>
                    </form>
                </div>

            </section>

            <!-- SECCIÓN COLECCIONES -->
            <section class="collections-section">

                <!-- SUBTÍTULO SECCIÓN COLECCIONES -->
                <p class="subtitle-collections-section"> Descubre </p>
                <!-- TÍTULO SECCIÓN COLECCIONES -->
                <h2 class="title-collections-section"> Nuestras Colecciones </h2>

                <!-- PRODUCTOS DE LA SECCIÓN COLECCIONES -->
                <div class="collections">

                    <!-- RECORRO EL ARRAY DE COLECCIONES PARA OBTENER CADA COLECCIÓN -->
                    <% for (let collection of collections) { %>
                        
                        <article class="<%= collection.classCollection %> collection">
                            <h4 class="title-collection-collections-section"> <%= collection.name %> </h4>
                            <p class="subtitle-collection-collections-section"> Descubre todos los productos de la colección <%= collection.name %> </p>
                            <a href="/products/collections/<%= collection.name %>" class="link-collection-collections-section"> Ver colección > </a>
                        </article>

                    <% } %>

                </div>

                <!-- ENLACE DE LA SECCIÓN COLECCIONES -->
                <form action="/" method="POST">
                    <button class="button-seccion-collections"> Ver todos </button>
                </form>

            </section>

            <!-- SECCIÓN INFO TECHLOGIC.STORE -->
            <section class="info-company-section">

                <!-- CUADRO DE INFO 1 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Contáctanos </h3>
                    <p class="p-info-company-section"> info@techlogic.com </p>
                    <p class="p-info-company-section"> 111-2345678 </p>
                </article>

                <!-- CUADRO DE INFO 2 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Visítanos </h3>
                    <p class="p-info-company-section"> Calle 123 </p>
                    <p class="p-info-company-section"> Ciudad Unknown </p>
                </article>

                <!-- CUADRO DE INFO 3 DE LA SECCIÓN INFO -->
                <article class="info-squart-info-section">
                    <h3 class="title-info-company-section"> Horario </h3>
                    <p class="p-info-company-section"> Lunes a Sábado </p>
                    <p class="p-info-company-section"> 8am - 5pm </p>
                </article>

            </section>

        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

    </body>

</html>