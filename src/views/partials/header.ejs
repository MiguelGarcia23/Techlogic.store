                    <li class="options-left-navbar">
                        <a href="#" id="admin">Admin</a>
                        
                        <!-- MENÚ QUE SE DESPLIEGA DE LA OPCIÓN CONTACTO -->
                        <div class="admin-option second-left-navbar" id="contact-second-left-navbar">
                            <ul>
                                <li class="second-options-left-navbar"><a href="/products/create">Crear producto</a></li>
                                <li class="second-options-left-navbar"><a href="http://localhost:3000/">Dashboard</a></li>
