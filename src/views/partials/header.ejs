    <div class="search-bar">
        <form action="/search" method="POST">
            <div class="inside-search-bar-header">
                <input type="search" name="search" id="search-header" class="input-search-bar-header" placeholder="Qué estás buscando?">
                <i class="fa-solid fa-x button-X-search-bar"></i>
            </div>
        </form>
    </div>

